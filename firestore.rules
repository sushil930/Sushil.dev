rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to everything
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow public write access to ratings (so anyone can rate)
    match /ratings/{ratingId} {
      allow write: if true;
    }
    
    // Allow write access to projects and skills (you might want to restrict this later)
    match /projects/{projectId} {
      allow write: if true;
    }
    
    match /skills/{skillId} {
      allow write: if true;
    }
  }
}